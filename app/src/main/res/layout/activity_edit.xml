<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simpletodokotlin.EditActivity">

    <TextView
        android:id="@+id/tvEditItemBelow"
        android:layout_width="270dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-black"
        android:text="Edit Item Below:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etEditItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEditItemBelow"
        android:layout_marginStart="28dp"
        android:ems="10"
        android:hint="Enter Item" />

    <Button
        android:id="@+id/btSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEditItem"
        android:layout_marginStart="28dp"
        android:text="Save" />

</RelativeLayout>